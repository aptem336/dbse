<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence">
    <persistence-unit name="dbse_pu">
        <class>dbse.entity.Relation</class>
        <class>dbse.entity.Attribute</class>
        <properties>
            <property name="hibernate.transaction.jta.platform" value="org.hibernate.engine.transaction.jta.platform.internal.SunOneJtaPlatform" />
            <property name="javax.persistence.schema-generation.database.action" value="drop-and-create"/>
            <property name="javax.persistence.schema-generation.scripts.action" value="drop-and-create"/>
            <property name="javax.persistence.schema-generation.scripts.create-target" value="create.sql"/>
            <property name="javax.persistence.schema-generation.scripts.drop-target" value="drop.sql"/>
            <property name="javax.persistence.jdbc.driver" value="org.apache.derby.jdbc.ClientDriver"/>
            <property name="javax.persistence.jdbc.url" value="jdbc:derby:memory:dbse_db;create=true"/>
        </properties>
    </persistence-unit>
</persistence>